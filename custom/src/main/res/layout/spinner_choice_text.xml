<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/spinner_left_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="民警"
        android:layout_marginLeft="5dp"
        android:textColor="@color/total_deep_lab"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/spinner_center_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_toEndOf="@+id/spinner_left_tb"
        android:layout_toRightOf="@+id/spinner_left_tb"
        android:textColor="@color/total_shallow_lab" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_drop_down_black_24dp" />
</RelativeLayout>